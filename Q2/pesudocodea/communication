// On Passer Robot (R1)
function send_tile_info(tile_color):
    packet = {
        "color": tile_color,
        "timestamp": get_time(),
        "ready": true
    }
    send_espnow(shooter_mac, packet)


// On Shooter Robot (R2)
function receive_from_passer():
    packet = listen_espnow()
    if packet.ready:
        current_color = packet.color
        begin_navigation(current_color)
